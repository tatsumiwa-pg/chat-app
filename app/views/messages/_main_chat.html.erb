<div class="main-header">
  <div class="left-header">hogehuga
  </div>
  <div class="right-header">
    <div class="exit-chat-btn">
     <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="messages">
    <div class="message">
      <div class="chat-user-info">
        <div class="chat-user-name">tom
         
        </div>
        <div class="message-date">2020/12/21 21:12:21
          
        </div>
      </div>
      <div class="message-content">おはよう
        
      </div>
    </div>
  
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit "送信", class: 'form-submit' %>
<% end %>